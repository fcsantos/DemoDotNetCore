@page
@model testeEFCore.Pages.Fornecedores.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Fornecedor</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Fornecedor.Nome" class="control-label"></label>
                <input asp-for="Fornecedor.Nome" class="form-control" />
                <span asp-validation-for="Fornecedor.Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Fornecedor.Documento" class="control-label"></label>
                <input asp-for="Fornecedor.Documento" class="form-control" />
                <span asp-validation-for="Fornecedor.Documento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Fornecedor.TipoFornecedor" class="control-label"></label>
                <select asp-for="Fornecedor.TipoFornecedor" asp-items="Html.GetEnumSelectList<testeEFCore.Business.Models.TipoFornecedor>()" class="form-control">
                    <option value="">-- Select Tipo de Fornecedor --</option>
                </select>
                <span asp-validation-for="Fornecedor.TipoFornecedor" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Fornecedor.Ativo" /> @Html.DisplayNameFor(model => model.Fornecedor.Ativo)
                </label>
            </div>
            <input type="hidden" asp-for="Fornecedor.Id" />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
